    <script type="application/javascript">
        function toggleCheckboxGroup(el, id) {
            let item = $$(id);
            if (item) {
                item.each(function (checkbox) {
                    if (checkbox.tagName.toLowerCase() === 'input' && checkbox.type === 'checkbox') {
                        checkbox.checked = el.checked;
                    }
                });
            }
        }
    </script>
