            <button type="button" onclick="selectFiles(document.getElementById('<?php echo $i==1 ? 'normal' : 'big'; ?>filelist'), document.getElementById('selectPattern').value, true);"><?php echo $GLOBALS['TL_LANG']['MSC']['unselect']; ?></button>
