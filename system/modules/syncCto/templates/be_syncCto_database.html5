        </thead>
        <tbody>
            <?php foreach($arrCompareList AS $strTableName => $arrCompareTable): ?>   
                <tr>
                    <td class="col_0 checkbox"><?php if($arrCompareTable['server'] != '-'): ?><input type="checkbox" class="tl_checkbox" name="<?php echo ($arrCompareTable['del'] == true) ? 'serverDeleteTables[]' : 'serverTables[]';?>" value="<?php echo $strTableName; ?>" /><?php endif; ?></td>
                    <td class="col_1 <?php echo $arrCompareTable['client']['class']; ?>">
                        <?php if ($arrCompareTable['client']['name'] != '-'): ?><img src="<?php echo $this->Environment->base; ?>system/modules/syncCto/html/icons/steps/iconInformation.png" alt="tooltip" title="<?php echo $arrCompareTable['client']['tooltip']; ?>" /><?php endif; ?>
                        <?php echo $arrCompareTable['client']['name']; ?>
                    </td>
                    <td class="col_2 <?php echo $arrCompareTable['server']['class']; ?>">
                        <?php if ($arrCompareTable['server']['name'] != '-'): ?><img src="<?php echo $this->Environment->base; ?>system/modules/syncCto/html/icons/steps/iconInformation.png" alt="tooltip" title="<?php echo $arrCompareTable['server']['tooltip']; ?>" /><?php endif; ?>
