        window.addEvent("domready",function(){
            window.parent.document.getElement('input[name=forward]').click();
        });
    </script>
    <?php else: ?>
        <p class="tl_error"><?php echo $this->text; ?></p>
        <?php if(count($this->arrError) > 0): ?>
